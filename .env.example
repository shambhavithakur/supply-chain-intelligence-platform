# .env.example
# Supply Chain Intelligence Platform Configuration
# Path: .env.example
# Copy to .env and add your actual values

# AI Integration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Contact Information
CONTACT_EMAIL=info@shambhavithakur.com
PORTFOLIO_URL=https://projects.shambhavithakur.com

# Analysis Configuration
MAX_SUPPLIERS_ANALYSIS=50
FORECAST_HORIZON_MONTHS=12
RISK_ASSESSMENT_FREQUENCY=daily

# Framework Settings
SUPPLIER_HEALTH_THRESHOLD=5.0
INVENTORY_OPTIMIZATION_TARGET=0.25
LOGISTICS_EFFICIENCY_TARGET=0.80
DISRUPTION_ALERT_THRESHOLD=6.0

# Database Configuration (optional)
DATABASE_URL=postgresql://username:password@localhost:5432/supply_chain_db

# Cloud Configuration (optional)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# API Rate Limits
API_REQUESTS_PER_MINUTE=60
ANALYSIS_CACHE_HOURS=24
